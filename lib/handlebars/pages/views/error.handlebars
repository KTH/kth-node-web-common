<!-- javascript for this view. -->
{{#extend 'scripts'}}
<script>
  window.StatusCode = ({{status}} || 500)
</script>
{{/extend}}
{{prefixScript '/static/js/app/view/errorModule.js'}}

<div class="errorMain">
  <img class="logo" src="static/kth-style/img/kth-style/KTH_Logotyp_RGB_2013-2.svg" />
  <h1>{{status}}</h1>
  <h3>{{friendly}}</h3>

  <div class="card card-body bg-light">
    <p class="kthLovesGeeks">HTTP {{status}}: {{message}}</p>
    {{#if error.stack}}
      <pre>{{error.stack}}</pre>
    {{/if}}
  </div>
</div>
